{
	"$schema": "https://mintlify.com/docs.json",
	"theme": "maple",
	"name": "mAItion",
	"description": "mAItion is an all-in-one ready-to-use AI-powered tool that combines your existing knowledge with LLMs, allowing you to chat, search and interact with your data through a slick chat interface.",
	"colors": {
		"primary": "#ff0000"
	},
	"icons": {
		"library": "fontawesome"
	},
	"api": {
		"openapi": "openapi.yaml",
		"playground": {
			"display": "none"
		}
	},
	"navbar": {
		"links": [
			{
				"type": "github",
				"label": "GitHub",
				"href": "https://github.com/WikiTeq/mAItion",
				"icon": "github"
			}
		]
	},
	"navigation": {
		"tabs": [
			{
				"tab": "Documentation",
				"icon": "code",
				"groups": [
					{
						"group": "Getting started",
						"pages": [
							"getting-started/index",
							"getting-started/quickstart"
						]
					},
					{
						"group": "Features",
						"pages": [
							"features/up-to-date-knowledge",
							"features/citation-backed-answers"
						]
					},
					{
						"group": "Connectors",
						"pages": [
							"connectors/s3-connector",
							"connectors/mediawiki-connector",
							"connectors/serpapi-connector"
						]
					},
					{
						"group": "Configuration",
						"pages": [
							"configuration/config-reference",
							"configuration/frontend-env",
							"configuration/backend-env"
						]
					}
				]
			},
			{
				"tab": "API reference",
				"openapi": "openapi.yaml"
			}
		]
	}
}
